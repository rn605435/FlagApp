<Page
    x:Class="FlagApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlagApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    

    <Grid Background="#242e38">
        <Grid VerticalAlignment="Top">
            <Image
                Width="200" Height="200"
                Stretch="Uniform"
                Source="ms-appx:///Assets/Flags/France.png"/>
            <TextBlock x:ConnectionId='9'  x:Name="titleApp" Text="FLAG QUIZ" Height="58" Width="auto" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FocusVisualPrimaryBrush="White" FontWeight="Bold" FontFamily="High Tower Text" FontSize="48" Foreground="#FFF08300">
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="TextBlock.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="titleApp"  
                                                 Storyboard.TargetProperty="Opacity"  
                                                 From="0.0" To="1.0" Duration="0:0:2" AutoReverse="False"  
                                                 
                                />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>

            </TextBlock>
        </Grid>

        <Grid x:ConnectionId='2' x:Name="homeMenu" VerticalAlignment="Center"
              Background="White"
              CornerRadius="8"
              Margin="8"
              Padding="16 50">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Button x:ConnectionId='3' x:Name="btnPlay"
                    Grid.Row="0"
                    Content="Jouer"
                    Margin="8"
                    Background="#FF5C7ACB"
                    Foreground="White"
                    HorizontalAlignment="Stretch"                      
                    />
            <Button x:ConnectionId='4' x:Name="btnScore"
                    Grid.Row="1"
                    Content="Classement"
                    Margin="8"
                    Background="#FFF08300"
                    Foreground="White"
                    HorizontalAlignment="Stretch"                       
                    />
            <Grid Grid.Row="2" Margin="8 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:ConnectionId='7'
                    GroupName="Mode"
                    Grid.Column="0"
                    x:Name="rdiEasy"
                    Content="Facile"
                    IsChecked="True"/>
                <RadioButton x:ConnectionId='8'
                    GroupName="Mode"
                    Grid.Column="1"
                    x:Name="rdiMedium"
                    Content="Moyen"/>

            </Grid>
            <Grid Grid.Row="3" Margin="8 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:ConnectionId='5'
                    GroupName="Mode"
                    Grid.Column="0"
                    x:Name="rdiHard"
                    Content="Difficile"/>
                <RadioButton x:ConnectionId='6'
                    GroupName="Mode"
                    Grid.Column="1"
                    x:Name="rdiExtreme"
                    Content="Extreme"/>

            </Grid>
        </Grid>
    </Grid>
</Page>
    

